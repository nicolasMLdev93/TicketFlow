{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "lib": ["ES2020"],
        "outDir": "./dist",
        "rootDir": ".",
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "checkJs": false,
        "noEmit": false,
        "removeComments": true,
        "sourceMap": true
    },
    "include": [
        "**/*.ts",
        "**/*.js",
        "**/*.json"
    ],
    "exclude": [
        "node_modules/**",
        "dist/**",
        "**/*.test.js",
        "**/*.test.ts",
        "**/*.spec.js",
        "**/*.spec.ts"
    ]
}
